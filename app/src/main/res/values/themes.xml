<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthMate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorControlHighlight">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TabItemAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp  </item>
    </style>
    <style name="MyBottomNavTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorControlHighlight">@color/primaryColor</item>
    </style>
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/popupmenu</item>
<!--        <item name="android:popupBackground">@color/secondaryColor</item>-->
    </style>


</resources>