<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:id="@+id/layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:strokeWidth="2dp"
        app:strokeColor="#1C54B2"
        android:outlineAmbientShadowColor="@color/black"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A7C1FD"
            app:cardCornerRadius="81dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"


            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="11dp">

            <TextView
                android:id="@+id/trend_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="19dp"
                android:text="Kcal/day"
                android:textColor="#1C54B2"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/trend_number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.542" />

            <TextView
                android:id="@+id/trend_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="1268"
                android:textColor="#1C54B2"
                android:textSize="19dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/trend_unit"
                app:layout_constraintStart_toEndOf="@+id/trend_icon" />

            <TextView
                android:id="@+id/trend_activity"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:text="Move"
                android:textColor="#1C54B2"
                android:textSize="25dp"
                app:layout_constraintStart_toEndOf="@+id/trend_icon"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/trend_icon"
                android:layout_width="67dp"
                android:layout_height="74dp"
                app:srcCompat="@drawable/ic_launcher_add"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>